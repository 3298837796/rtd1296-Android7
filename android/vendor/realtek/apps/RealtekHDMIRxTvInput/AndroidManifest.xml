<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.realtek.hdmirxinput"
    android:versionCode="1"
    android:versionName="1.0" >

    <!-- TIF related -->
    <uses-permission android:name="android.permission.TV_INPUT_HARDWARE" />
    <!--
    <uses-permission android:name="com.android.providers.tv.permission.READ_EPG_DATA" />
    <uses-permission android:name="com.android.providers.tv.permission.WRITE_EPG_DATA" />
    -->
    <!-- to playback video in external storage -->
    <!--
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    -->

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >

        <!-- Setting activity for hardware tv input -->
        <!-- a hardware tv input does not need a setup activity
        <activity
            android:name=".SetupActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
            </intent-filter>
        </activity>
        -->

        <!-- service of HDMI Rx -->
        <service android:name="HDMIRxTvInputService"
            android:permission="android.permission.BIND_TV_INPUT"
            android:label="@string/dvdplayer_input_label">
            <intent-filter>
                <action android:name="android.media.tv.TvInputService" />
            </intent-filter>
            <meta-data android:name="android.media.tv.input"
                android:resource="@xml/hdmirxinputservice" />
        </service>
    </application>

</manifest>
