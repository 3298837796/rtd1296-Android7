<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.realtekhdmirxinput.MainActivity" >

    <!-- button group -->
    <LinearLayout android:id="@+id/layout_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerHorizontal="true">

        <!-- OK -->
        <Button android:id="@+id/ok_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ok"/>

        <!-- Cancel -->
        <Button android:id="@+id/cancel_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cancel"/>

        <!-- debug 1 -->
        <Button android:id="@+id/db1_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/db1"/>

        <!-- debug 2 -->
        <Button android:id="@+id/db2_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/db2"/>
        <!-- info label -->
        <TextView android:id="@+id/info_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        <!-- info label2 -->
        <TextView android:id="@+id/info_text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

    </LinearLayout>

</RelativeLayout>
